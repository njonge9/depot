<h2 class='text-center'>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-outline mb-4">
    <%= f.label :email , class:'form-label'%><br />
    <%= f.email_field :email, autofocus: true,class:'form-control', autocomplete: "email" %>
  </div>

  <div class="field ">
    <%= f.label :password, class:'form-label' %><br />
    <%= f.password_field :password,class:'form-control', autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class:'form-field' %>
      <%= f.label :remember_me, class:'form-label' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-primary button-pri' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
